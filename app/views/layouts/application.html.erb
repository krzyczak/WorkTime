<!DOCTYPE html>
<html>
  <head>
  <head>
    <title><%= h(yield(:title) || "Fakturant") %></title>
    <%= stylesheet_link_tag 'application', 'menu', 'button', 'jquery-ui-1.8.5.custom', :media => "all" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container" class="transparent_class">
      <div id="menu_bar">
        <div id="nav">
          <ul>
            <li class="<%= controller.controller_path == 'employees' ? 'selected' : '' %>">
              <%= link_to 'Pracownicy', employees_path %>
            </li>
            <li class="<%= controller.controller_path == 'work_records' ? 'selected' : '' %>">
              <%= link_to 'Czas Pracy', work_records_path %>
            </li>
            <li class="<%= controller.controller_path == 'work_time_cards' ? 'selected' : '' %>">
              <%= link_to 'MiesiÄ™czna ewidencja czasu pracy', work_time_cards_path %>
            </li>
            <li class="<%= request.path == '/overtime' ? 'selected' : '' %>">
              <%= link_to 'Suma nadgodzin', overtime_path %>
            </li>
            <li class="<%= request.path == '/by_person' ? 'selected' : '' %>">
              <%= link_to 'Raport godzin pracownika', by_person_path %>
            </li>
          </ul>
        </div>
      </div>
      
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
      
      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>
      
      <%= yield %>
    </div>
  </body>
</html>
